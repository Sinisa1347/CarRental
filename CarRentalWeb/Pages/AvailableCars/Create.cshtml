	<script>
		var progress = new Number(0);
		function updateProg(element) {
			var weight = element.attributes.weight.value;
			if (element.value.length > 0 || element.checked) {
				progress += new Number(weight);
			}
			else {
				progress -= new Number(weight);
			}
			if(progress > 100) { progress = 100; }
			if(progress < 0) { progress = 0; }
			bar = document.getElementById("innerPbar");
			bar.style.width = progress+"%";
			bar.innerHTML = progress +"%";
		}
	</script>

	


}


