
@page
@model CarRentalWeb.Pages.AvailableCars.CreateModel


<form method="post">
	<div class=”container-fluid border p-6 mt-2”>
		<div class="row">
			<h3>Add new car to the system</h3>
		</div>
		
		<style>
			#pbar {
			width:auto;
			height:20px;
			border-style:solid;
			border-width:1px;
			border-color:#000000;
			}
			#innerPbar {
				width:0px;
				height:20px;
				background-color:#7CFC00;
			}
		</style>

		<div id="pbar">
			<div id="innerPbar"></div>
		</div>

		<br/>

		<div class="input-group-lg ">
			<label asp-for="Category.CarModel"></label>
			<span asp-validation-for="Category.CarModel" class="text-danger"></span>
			<br/>
			<select asp-for="Category.CarModel" class="form-select border" weight="25" onBlur="updateProg(this);">
				<option value= >Choose one model:</option>
				<option value="Audi">Audi</option>
				<option value="Mercedes-Benz">Mercedes-Benz</option>
				<option value="Hyundai">Hyundai</option>
				<option value="Honda">Honda</option>
				<option value="Nissan">Nissan</option>
				<option value="Volkswagen">Volkswagen</option>
			</select>
			
		</div>

		<div class="input-group-lg ">
			<label asp-for="Category.CarColor"></label>
			<span asp-validation-for="Category.CarColor" class="text-danger"></span>
			<br/>
			<select asp-for="Category.CarColor" class="form-select border" weight="25" onBlur="updateProg(this);">
				<option value= >Choose one color:</option>
				<option class="bg-danger text-white" value="Red">Red</option>
				<option class="bg-primary text-white" value="Blue">Blue</option>
				<option class="bg-success text-white" value="Green">Green</option>
				<option class="bg-warning text-white" value="Yellow">Yellow</option>
				<option class="text-white" value="White">White</option>
				<option class="bg-dark text-white" value="Black">Black</option>
			</select>
		</div>

		<div>
			<label asp-for="Category.CarAge"></label>
			<input asp-for="Category.CarAge" class="form-control"  onBlur="updateProg(this);" weight="25" >
			<span asp-validation-for="Category.CarAge" class="text-danger"></span>
		</div>
		<div>
			<label asp-for="Category.CarKilometres"></label>
			<input asp-for="Category.CarKilometres" class="form-control" weight="25" onBlur="updateProg(this);">
			<span asp-validation-for="Category.CarKilometres" class="text-danger"></span>
		</div>
		<br />
		<div class="row">
			<button type="submit" class="btn btn-primary"><i class="bi bi-plus-circle-dotted"></i>&nbsp Create</button>

			<a asp-page="Index" class="btn btn-secondary">Go back to Index page</a>

		</div>
		
	</div>

</form>

